<view class="box">
    <view class="main" bindtap="open_close">
        <image class="img" animation="{{animation}}" hidden="{{active}}" class="icon" mode="widthFix" src="{{icon}}"></image>
        <image hidden="{{!active}}" class="icon" mode="widthFix" src="http://qiniu-pub.yixsu.com/btn_home_close.png"></image>
    </view>
    <view wx:for="{{items}}" wx:key="index" class="sub" animation="{{item.animation}}" bindtap="tapitem" data-item="{{item}}">
        <image class="icon" mode="widthFix" src="{{item.img}}"></image>
    </view>

</view>