
.container {
  display:block
}

.mine-top{
  height: 250rpx;
  width: 750rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  z-index: 1;

}
.mine-top-bg{
  position: absolute;
  height: 250rpx;
  width: 750rpx;
  top:0;
  left: 0;
  z-index:0;
}

.mine-top .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  margin-left: 325rpx;
  margin-top: 50rpx;

}
.mine-top .username {
  width: 750rpx;
  margin-top: 20rpx;
  text-align: center;
  color: #fff;

}
.mine-item {
  width: 750rpx;
  height:120rpx;
  background: #fff;
  position:relative;
  margin-top: 10rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  color: #333;
}
.mine-item .ico{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  margin-left: 100rpx;
  vertical-align: middle;
}
.mine-item text{
  vertical-align: middle;
}
.label_area {
  position: absolute;
  top: 100rpx;

  left: 450rpx;

}
.info {
  position: absolute;
  top: 140rpx;
  left: 450rpx;
  color: red;
  font-size: 20rpx;
}
.label {

  padding: 5rpx 10rpx;
  color: #fff;
  border-radius: 5rpx;
  font-size: 20rpx;

  background: rgb(0,200,200);
}
.label.past{
  background: #aaa;
}

.item{
  width: 710rpx;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
  height: 200rpx;
}

.left, .right{
  display: inline-block;
}

.left{
  width: 300rpx;
  height:200rpx;
  overflow: hidden;
}
.right{
  width: 370rpx;
  float: right;
  margin-left: 20rpx;
}
