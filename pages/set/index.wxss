}
.mine-item-line1{
    width: 750rpx;
    height: 1px;
    background: #e7e7e7;
    top:100rpx;
    left: 0rpx;
    position: absolute;
    z-index: 10;
}

.mine-item-line2{
    width: 750rpx;
