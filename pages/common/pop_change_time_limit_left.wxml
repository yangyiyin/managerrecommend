<view  wx:if="{{pop_change_time_limit_left}}" class="pop pop_change_time_limit_left">
    <view class="title">修改剩余时间</view>
    <view wx-if="{{can_del_block}}" bindtap="del_block" style="float:right;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: red;color: #fff">删除</view>
    <view bindtap="close_pop_change_time_limit_left" style="float:right;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: #000;color: #fff">取消</view>
    <view bindtap="ok_change_time_limit_left" style="float:right;right: 300rpx;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: #0CD400;color: #fff">确定</view>

    <view style="clear: both"></view>
    <view class="input" style="margin-top: 10rpx">
        <input bindinput="bindinputday" type="number" maxlength="2" value="{{day}}" />
        <view style="float: left">天</view>
        <input bindinput="bindinputhour" type="number" maxlength="2" value="{{hour}}" />
        <view style="float: left">时</view>
        <input bindinput="bindinputmin" type="number" maxlength="2" value="{{min}}" />
        <view style="float: left">分</view>
    </view>
</view>