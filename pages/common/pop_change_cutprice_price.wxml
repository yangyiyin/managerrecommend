<view style="height:340rpx" wx:if="{{pop_change_cutprice_price}}" class="pop pop_change_time_limit_left">
    <view class="title">修改价格</view>
    <view wx-if="{{can_del_block}}" bindtap="del_block" style="float:right;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: red;color: #fff">删除</view>
    <view bindtap="close_pop_change_cutprice_price" style="float:right;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: #000;color: #fff">取消</view>
    <view bindtap="ok_change_change_cutprice_price" style="float:right;right: 300rpx;font-size: 30rpx;width: 150rpx;height:100rpx;line-height: 100rpx;text-align: center;background: #0CD400;color: #fff">确定</view>

    <view style="clear: both"></view>
    <view class="input" style="margin-top: 10rpx;height:240rpx">
        <view style="float: left">原价(元)</view>
        <input bindinput="bindinputcutprice_price"  type="number" maxlength="7" value="{{cutprice_price}}" />
        <view style="float: left;">最大优惠金额(元)</view>
        <input bindinput="bindinputcutprice_max_minus_price" type="number" maxlength="7" value="{{cutprice_max_minus_price}}" />
        <view style="float: left;">平均每次可砍价(元)</view>
        <input bindinput="bindinputcutprice_average_price" type="number" maxlength="7" value="{{cutprice_average_price}}" />

    </view>
</view>