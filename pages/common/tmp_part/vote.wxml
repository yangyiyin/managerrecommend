<view bindtap="change_vote" data-index="{{index}}" class="edit-box{{page_status}} {{item.is_active}}" style="{{item.style}}" >
    <view style="width: 750rpx;">

            <view wx:for="{{item.vote_num_arr}}" wx:key="index" wx:for-index="index2" style="position:relative;float:left;width: 175rpx;margin-left: 10rpx;margin-top: 20rpx;">
                <image catchtap="change_vote_img" data-index="{{index}}" data-index_sub="{{index2}}" class="edit-box{{page_status}} {{item.is_active}}" style="width: 175rpx;height: 175rpx;" src="{{item.src}}" mode="widthFix"></image>
                <view style="position: absolute;top: 0;width: 100%;height:40rpx;background: rgba(255,255,255,0.7)"></view>
                <view style="position: absolute;top:0;left: 0;font-size: 20rpx;">{{index2+1}}号</view>
                <view style="position: absolute;top:0;right: 0;font-size: 20rpx;">{{item.sign}}票</view>
                <view  wx:if="{{!customerview}}" style="margin:0 auto;width: 80rpx;text-align:center;padding: 5rpx;background: #0CD400;color: #fff;border-radius: 3rpx;">投票</view>
                <view  wx:if="{{customerview}}" bindtap="custom_vote" data-vote_id="{{index2}}" style="margin:0 auto;width: 80rpx;text-align:center;padding: 5rpx;background: #0CD400;color: #fff;border-radius: 3rpx;">投票</view>

            </view>



    </view>
    <view style="clear: both"></view>
</view>

