<view wx:if="{{!customerview}}" style="{{item.style}}" >
    <view style="float: left;padding: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">报名活动</view>
    <view style="float: left;padding: 20rpx;margin-left: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">喊人点赞</view>
    <view style="float: left;padding: 20rpx;margin-left: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">点赞</view>
    <view style="clear: both"></view>
</view>

<view wx:if="{{customerview}}" style="{{item.style}}" >


    <view  wx:if="{{!is_sign_praise}}" bindtap="custom_praise_sign" style="float: left;padding: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">报名活动</view>
    <view  wx:if="{{is_sign_praise}}" bindtap="custom_praise_sign" style="float: left;padding: 20rpx;background: #999;color: #fff;border-radius: 5rpx;">已报名</view>

    <view wx:if="{{is_sign_praise}}" bindtap="custom_praise_help" style="float: left;padding: 20rpx;margin-left: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">喊人点赞</view>
    <view  wx:if="{{!is_help_praise && extra_uid && !is_sign_praise}}" bindtap="custom_praise_praise" style="float: left;padding: 20rpx;margin-left: 20rpx;background: #0CD400;color: #fff;border-radius: 5rpx;">点赞</view>
    <view  wx:if="{{is_help_praise && extra_uid && !is_sign_praise}}" bindtap="custom_praise_praise" style="float: left;padding: 20rpx;margin-left: 20rpx;background: #999;color: #fff;border-radius: 5rpx;">已点赞</view>

    <view style="clear: both"></view>
</view>