/**app.wxss**/
page{
  height:100%;
  background: #eeeeee;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;

}

.main_color{
  color: #0CD400;
}
.bg_color{
  color: #cdcdcd;
}
.button {

  padding: 10rpx 20rpx;
  background: #0CD400;

  text-align: center;
  color: #fff;
  border-radius: 5rpx;
  box-shadow: #999 0px 0px 5px;

}
.empty_info{
  width: 690rpx;
  margin: 10rpx 10rpx;
  height:auto;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.sys-tips{
  font-size: 24rpx;
  background: rgba(250,230,100,0.9);
  padding: 10rpx 5rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  width: 742rpx;
}