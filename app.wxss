/**app.wxss**/
page{
  height:100%;
  background: #fff;
}

.container {
  color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  overflow-x: hidden;

}

.main_color{
  color: #0CD400;
}
.bg_color{
  color: #cdcdcd;
}
.button {

  padding: 10rpx 20rpx;
  background: #0CD400;

  text-align: center;
  color: #fff;
  border-radius: 5rpx;
  box-shadow: #999 0px 0px 5px;

}
.empty_info{
  width: 690rpx;
  margin: 10rpx 10rpx;
  height:auto;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
}

.sys-tips{
  font-size: 24rpx;
  background: rgba(250,230,100,0.9);
  padding: 10rpx 5rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  width: 742rpx;
}

.img {
  width: 100%;
  height:100%;
}
.ke{
  width: 100%;height: 100%;position: relative;
}
.btn{

  background: #38CA45;
  color: #fff;
  border-radius: 10rpx;
  width: 100%;
  text-align: center;
  padding: 25rpx 0;
  margin: 0 auto;


}
.min-info{
  font-size: 24rpx;
  color: #999;
}